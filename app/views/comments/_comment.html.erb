<div class="d-flex justify-content-between border-top py-3">
  <div class="content">
    <p>
      <%= comment.content %>
    </p>
  </div>
  <div>
    <% if comment.user == current_user || comment.article.user == current_user %>
      <%= link_to 'Delete', [comment.article, comment],
                method: :delete, class: "btn btn-sm btn-outline-secondary", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>