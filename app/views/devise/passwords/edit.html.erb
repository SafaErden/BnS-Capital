<div class="container pt-5">
  <div class="col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8 justify-content-around blog-header-logo text-dark h4 mx-auto">Change your password</div>
  <div class="col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8 mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :class => 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", :class => 'btn btn-dark btn-sm px-3 my-3' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
