<div class="container">
  <div class="row justify-content-center mt-5 mb-3">
    <div class="h1 col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8">
        <strong><%= @article.title %></strong>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8 text-right">
      <%= link_to 'Edit', edit_article_path(@article), :class => "btn btn-dark text-white" %>
    </div>
  </div>

  <div class="row text-center justify-content-center my-4">
    <div class="col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8">
      <%= image_tag(@article.cover, :class => "img-fluid") %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8">
        <%= sanitize @article.content %>
    </div>
  </div>
</div>


