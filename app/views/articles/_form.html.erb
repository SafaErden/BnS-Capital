<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-12 mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, :class => "form-control" %>
  </div>

  <div class="col-12 mb-3">
    <%= form.label :cover %>
    <%= form.file_field :cover, :class => "form-control" %>
  </div>

  <div class="col-12 mb-3">
    <%= form.label :abstract %>
    <%= form.text_area :abstract, rows:"5", :class => "form-control" %>
  </div>

  <div class="col-12 mb-3">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="col-12 mb-3 justify-conetnt-end">
    <button type="button" class="btn btn-sm btn-outline-secondary" href="#">Save</button>
    <%= form.submit :class => 'btn btn-dark btn-sm' %>
  </div>
<% end %>
